{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:angular/johnpapa"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-lines": "warn",
    "capitalized-comments": "warn",
    "curly": "error",
    "dot-notation": "warn",
    "eqeqeq": "error",
    "multiline-comment-style": "warn",
    "no-case-declarations": "warn",
    "no-confusing-arrow": "warn",
    "no-lonely-if": "warn",
    "no-shadow-restricted-names": "error",
    "no-unneeded-ternary": "warn",
    "no-useless-return": "warn",
    "no-var": "error",
    "prefer-const": "warn",
    "prefer-destructuring": "warn",
    "prefer-template": "warn",
    "sort-imports": "warn",
    "spaced-comment": "warn",
    "strict": "warn",
    "yoda": "warn"
  }
}
